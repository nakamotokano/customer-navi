<div class="container">
<h1>顧客登録ページ</h1>
<!-- form_with部分 -->
<%= form_with model: @customerdetail do |f| %>
<table>
<tr>
<th>姓</th>
<td>
<%= f.text_field :last_name %>
</td>
<th>名</th>
<td>
<%= f.text_field :first_name %>
</td>
</tr>
<th>性別</th>
<td>
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</button>
    <div class="dropdown-menu">
      <a class="dropdown-item" href="#">女</a>
      <a class="dropdown-item" href="#">男</a>
      <a class="dropdown-item" href="#">その他</a>
    </div>
    <%= f.text_field :gender %>
</td>
<tr>
<th>来店日</th>
<td>
<%= f.text_field :visits %>
</td>
</tr>
<th>誕生日</th>
<td>
<%= f.text_field :birthday %>
</td>
</tr>
<tr>
<th>ご利用額</th>
<td>
<%= f.text_field :unit_price %>
</td>
</tr>
<th>電話番号</th>
<td>
<%= f.text_field :phone_number %>
</td>
<th>メールアドレス</th>
<td>
<%= f.text_field :email %>
</td>
<th>郵便番号</th>
<td>
<%= f.text_field :post_code %>
</td>
<th>住所</th>
<td>
<%= f.text_field :address %>
</td>
<th>職業</th>
<td>
<%= f.text_field :profession %>
</td>
<th>年収</th>
<td>
<%= f.text_field :annual_income %>
</td>
<th>次回リピート見込み</th>
<td>
<%= f.text_field :repeat %>
</td>
<th>結婚の有無</th>
<td>
<%= f.text_field :marriage %>
</td>
<th>子供の有無</th>
<td>
<%= f.text_field :children %>
</td>
</table>

</div>
<h1>目標</h1>
<h4>来店頻度</h4>
<%= f.text_field :visit_frequency %>
<h4>単価</h4>
<%= f.text_field :unit_price %>
<h4>1か月の売り上げ目標</h4>
<%= f.text_field :month_sales_target %>
<h4>最終売上金額目標</h4>
<%= f.text_field :gole_sales_target %>

<%= f.submit '投稿' %>
<% end %>

</div>
